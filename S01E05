Console.WriteLine ("Validando um triângulo");

Console.WriteLine ("Digite um valor para Lado 1:");
float lado1;
lado1 = float.Parse(Console.ReadLine());

Console.WriteLine ("Digite um valor para Lado 2:");
float lado2;
lado2 = float.Parse(Console.ReadLine());

Console.WriteLine ("Digite um valor para Lado 3:");
float lado3;
lado3 = float.Parse(Console.ReadLine());

if (!(lado1 + lado2 > lado3 || lado2 + lado3 > lado1 || lado1 + lado3 > lado2)){
  Console.WriteLine("Não um triângulo");
  return;
}

  Console.WriteLine("É um triângulo");

    if (lado1 == lado2 && lado2 == lado3 && lado1 == lado3){
      Console.WriteLine("É um triângulo equilátero");
    }

   else if (lado1 == lado2 || lado2 == lado3 || lado1 == lado3){
    Console.WriteLine("É um triângulo isósceles");
    }

    else if (lado1 != lado2 && lado2 != lado3 && lado1 != lado3){
      Console.WriteLine("É um triângulo escaleno");
    }

